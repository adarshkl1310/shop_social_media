<div class="panel panel-default">
<div class="w3-container w3-margin-bottom">

<h3>Add a Comment</h3>
  
    <div class="panel-heading">
<%=simple_form_for([@home,@home.homecomments.build]) do |f| %>
      
	<%= f.text_area :content,:maxlength=>"10000",label: ".",:rows => 6,:cols => 60,class: "form-control" %>
