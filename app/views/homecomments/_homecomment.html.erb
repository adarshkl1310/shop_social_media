
<div class="w3-panel w3-card-2 w3-responsive">
<div class="w3-container w3-margin-bottom">


<h6><b>Name : </b><%=link_to homecomment.user.name,profile_path(homecomment.user.id).capitalize,class: "w3-text-blue"%></h6> 
 <P><b>Country : </b><%=homecomment.user.country%> / <%=homecomment.user.business_type.capitalize %>
   </P>
  <P><b><%= time_ago_in_words(homecomment.created_at) %> ago</b></P>
   </br>
   <p class="text-secondary"><%= homecomment.content %></p>
 </br>
  <% if current_user == homecomment.user %>

<%= link_to "Edit", edit_home_homecomment_path(homecomment.home, homecomment),class: "w3-btn w3-blue-grey" %>

<%= link_to "Delete", home_homecomment_path(homecomment.home, homecomment), method: :delete, data: { confirm: "Are you sure?"},class: "w3-btn w3-red" %>

<%end%>

</div>
</div>

